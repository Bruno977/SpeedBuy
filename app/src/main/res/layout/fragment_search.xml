<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Search"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    <EditText
        android:hint="Item ou loja"
        android:textSize="15sp"
        android:inputType="textCapSentences"
        android:textColor="@android:color/widget_edittext_dark"
        android:textColorHint="#b1b1b1"
        android:drawableLeft="@drawable/searchcinza"
        android:drawablePadding="8dp"
        android:paddingLeft="24dp"
        android:background="#ececec"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:imeOptions="actionSearch"
        android:imeActionLabel="Search"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2B2A2A"
            android:text="Categorias"
            android:layout_marginTop="80dp"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"

            >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">


            <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <ImageView
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:src="@drawable/utili"
            ></ImageView>

        <ImageView
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginLeft="19dp"
            android:src="@drawable/eletro2"></ImageView>
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:src="@drawable/toalhas"></ImageView>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_marginLeft="19dp"
                android:src="@drawable/moveis"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:src="@drawable/ilumina"></ImageView>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_marginLeft="19dp"
                android:src="@drawable/decora"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:src="@drawable/cell"></ImageView>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_marginLeft="19dp"
                android:src="@drawable/pc1"></ImageView>
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:src="@drawable/perife"></ImageView>

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/process"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:src="@drawable/brinq"></ImageView>

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/roupas"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:src="@drawable/maquia"></ImageView>

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/promo"></ImageView>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>